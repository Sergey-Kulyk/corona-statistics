<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="TitleText" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_bold</item>
    </style>

    <style name="SymptomText" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/symptom_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_medium</item>
        <item name="android:drawablePadding">12dp</item>
    </style>

    <style name="PreventationTitleText" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/preventation_title_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_medium</item>
    </style>

    <style name="PreventationDescriptionText" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/preventation_description_size</item>
        <item name="android:textColor">#51535B</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_regular</item>
    </style>

</resources>
