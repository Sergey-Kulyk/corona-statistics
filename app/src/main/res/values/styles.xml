<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="TitleText" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_bold</item>
    </style>

    <style name="SymptomText" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/symptom_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_medium</item>
        <item name="android:drawablePadding">12dp</item>
    </style>

    <style name="PreventationTitleText" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/preventation_title_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_medium</item>
    </style>

    <style name="PreventationDescriptionText" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/preventation_description_size</item>
        <item name="android:textColor">#51535B</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_regular</item>
    </style>

    <style name="CountryInfoText" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/county_info_text_size</item>
        <item name="android:textColor">#595B63</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_regular</item>
    </style>

    <style name="WorldwideText" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/county_info_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_medium</item>
    </style>

    <style name="StatisticsPercentText" parent="android:Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_medium</item>
    </style>

    <style name="StatisticsInfoText" parent="android:Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#3E4048</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_regular</item>
    </style>

    <style name="PercentLayoutStyle">
        <item name="android:layout_width">@dimen/statistics_percent_block_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>


        <!-- Base application theme. -->
        <style name="AppBarTheme" parent="Theme.AppCompat.Light">
            <item name="colorPrimary">@android:color/transparent</item>
            <item name="windowActionBarOverlay">true</item>
        </style>

</resources>
