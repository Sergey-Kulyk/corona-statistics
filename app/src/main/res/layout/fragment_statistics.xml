<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".ui.dashboard.statistics.StatisticsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:contentScrim="#80000000"
            app:layout_scrollFlags="exitUntilCollapsed|scroll">

            <include
                android:id="@+id/percentsStatisticsLayout"
                layout="@layout/content_statictics_percent"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="260dp"
                android:layout_marginBottom="30dp"
                app:layout_collapseMode="pin" />

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/black"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/statisticsTitle"
                            style="@style/TitleText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="40dp"
                            android:text="@string/tab_statistics" />

                        <com.sergeykulyk.corona_statistics.ui.custom.week_calendar_view.WeekCalendarView
                            android:id="@+id/weekCalendarView"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginTop="40dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/gradient_black"
                        android:rotation="180" />
                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

            <TextView
                android:id="@+id/monthName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/ibm_plex_sans_medium"
                android:textColor="@color/gray"
                android:textSize="14sp"
                tools:text="January" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <LinearLayout
            android:id="@+id/countryValueDescriptionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_scrollFlags="snap">

            <TextView
                style="@style/StatisticsInfoText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="24dp"
                android:layout_weight="0.3"
                android:text="@string/statistics_country_location" />

            <TextView
                style="@style/StatisticsInfoText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="48dp"
                android:layout_weight="0.25"
                android:text="@string/statistics_country_confirmed" />

            <TextView
                style="@style/StatisticsInfoText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.25"
                android:text="@string/statistics_country_recovered" />

            <TextView
                style="@style/StatisticsInfoText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="24dp"
                android:layout_weight="0.25"
                android:text="@string/statistics_country_deaths" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/countriesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="50dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient_black"
        android:elevation="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient_black"
        android:elevation="8dp"
        android:rotation="180"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom" />

    <FrameLayout
        android:id="@+id/placeHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="220dp"
        android:elevation="8dp"
        android:visibility="gone">

        <include
            layout="@layout/content_place_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/ic_globe" />

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>