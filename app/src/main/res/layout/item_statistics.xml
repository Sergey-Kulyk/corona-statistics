<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/statisticsRoot"
    android:layout_width="140dp"
    android:layout_height="120dp"
    android:background="@drawable/ic_statistics_overview_active"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/statisticsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ibm_plex_sans_regular"
        android:includeFontPadding="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        tools:text="Active" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/ibm_plex_sans_medium"
        android:includeFontPadding="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        tools:text="328,629" />

    <TextView
        android:id="@+id/percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableEnd="@drawable/ic_polygon"
        android:drawablePadding="6dp"
        android:fontFamily="@font/ibm_plex_sans_medium"
        android:includeFontPadding="false"
        android:textColor="#80ffffff"
        android:textSize="11sp"
        tools:text="96%" />

</LinearLayout>